@model FınalProjectBeginning.Models.Kulsayfasi
@section Styles {
    <style>
        body {
            background-color: black;
        }
    </style>
}

<main style="margin-top: 40px;">
    <div class="container">
        <div class="row m-b-r m-t-3">
            <div class="col-md-2 offset-md-1">
                <img src="~/images/@Model.ImageName" alt="" class="img-circle img-fluid">
            </div>
            <div class="col-md-9 p-t-2">
                <h2 class="h2-responsive">@Model.CetUser.Name <button type="button" class="btn btn-info-outline waves-effect text-white">Follow</button></h2>
                <p>@User.Identity.Name @ViewBag.Name</p>

                <ul class="flex-menu">
                    <li><strong>@Model.CetUser.Posts.Count() </strong> posts</li>
                    <li><strong>@Model.CetUser.TakipEdenUsers.Count()</strong> followers</li>
                    <li><strong>@Model.CetUser.TakipEdilenKisis.Count()</strong> following</li>
                </ul>
            </div>
        </div>
        <section class="food_section layout_padding">
            <div class="container">

                <div class="filters-content">
                    <div class="row grid">

                        @foreach (var post in Model.CetUser.Posts)
                        {
                            <div class="col-sm-6 col-lg-4 all pizza">
                                <div class="box">
                                    <div>
                                        @* <div class="img-box">
                                    <a asp-controller="Posts" asp-action="Details" asp-route-id="@item.Id">
                                    <img src="images/@item.ImageName" alt="" >
                                    </a> *@
                                        
                                        <a asp-controller="Posts" asp-action="Details" asp-route-id="@post.Id">
                                            <img src="~/images/@post.ImageName" alt="" width="100%" height="250px" >
                                        </a>
                                        
                                    </div>
                                       
                                    </div>
                                </div>


                        }

                    </div>
                </div>
            </div>
        </section>
    </div>
</main>

